{
  "name": "ts-express",
  "version": "1.0.0",
  "main": "/apps/user/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "build": "tsc",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",

    "start": "node dist/services/app1.js",
    "start:app1": "node dist/services/app1.js",
    "start:app2": "node dist/services/app2.js",
    "start:all": "concurrently \"npm run start:app1\" \"npm run start:app2\"",

    "dev": "concurrently \"npm run dev:user\" \"npm run dev:service\" \"npm run dev:financial\"",
    "dev:user"     : "nodemon apps/user/index.ts"    ,
    "dev:service"  : "nodemon apps/service/index.ts" ,
    "dev:financial": "nodemon apps/financial/index.ts"
  },
  "keywords": [],
